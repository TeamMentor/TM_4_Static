@font-face
  font-family: 'Montserrat'
  font-weight: 400
  font-style: normal
  src: url('../../assets/fonts/Montserrat-regular/Montserrat-regular.eot')
  src: url('../../assets/fonts/Montserrat-regular/Montserrat-regular.eot') format('embedded-opentype'),
    url('../../assets/fonts/Montserrat-regular/Montserrat-regular.woff2') format('woff2'),
    url('../../assets/fonts/Montserrat-regular/Montserrat-regular.woff') format('woff'),
    url('../../assets/fonts/Montserrat-regular/Montserrat-regular.ttf') format('truetype'),
    url('../../assets/fonts/Montserrat-regular/Montserrat-regular.svg#Montserrat') format('svg')

@font-face
  font-family: 'Hind'
  font-weight: 400
  font-style: normal
  src: url('../../assets/fonts/Hind-regular/Hind-regular.eot')
  src: url('../../assets/fonts/Hind-regular/Hind-regular.eot') format('embedded-opentype'),
    url('../../assets/fonts/Hind-regular/Hind-regular.woff2') format('woff2'),
    url('../../assets/fonts/Hind-regular/Hind-regular.woff') format('woff'),
    url('../../assets/fonts/Hind-regular/Hind-regular.ttf') format('truetype'),
    url('../../assets/fonts/Hind-regular/Hind-regular.svg#Hind') format('svg')

h1, h2, h3, h4, h5, h6
  font-family: 'Montserrat', sans-serif
  font-weight: normal
  font-style: normal

h1, h2, h3
  color: $headingcolor

h4, h5, p, ul
  color: $textcolor

h1
  font-size: 2em
  line-height: 1.25em

h2
  font-size: 1.75em
  line-height: 1.153em

h3
  font-size: 1.5em
  line-height: 1.136em

h4
  font-size: 1.25em
  line-height: 1.5em

h5
  font-size: 1em
  line-height: 1.11em

p, a, ul, ol
  font-family: 'Hind', sans-serif

p, ul
  font-size: 0.85em
  line-height: 2em

ul, ol
  margin: 0
  padding: 0
  list-style-type: none
  width: $fullwidth

  &.display-inline
    li
      display: inline-block
      vertical-align: top

code, pre
  font-family: monospace, monospace
  font-size: 1em

pre
  display: block
  background-color: $white
  padding: 2em
  margin: 2.5em 0
  font-size: 0.85em
  line-height: 1.5em
  color: $textcolor
  word-break: break-all
  word-wrap: break-word
  border: $border
  border-radius: 0
  overflow(auto)

hr
  margin: 0 auto
  width: 70%
  color: $bordercolor
  margin: 40px 0

a
  color: $textcolor
  text-decoration: none
  transitions(color 0.3s)

  &:hover, &:active, &:focus, &.active
    color: $brandcolor
    text-decoration: none
    transitions(color 0.3s)

.text-center
  text-align: center !important
  margin: 0 auto

.text-right
  text-align: right !important

.text-left
  text-align: left !important

// Article Typography

.article
  h1, h2, h3, h4, h5, h6
    margin: 1em 0 0 0

  a
    text-decoration: underline

  ul
    list-style-type: disc
    margin: 1em
    padding: 1em