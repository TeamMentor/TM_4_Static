// First Level Navigation

.logo
  flex-order(1)
  flex(25%)
  width: 25%
  height: 3em
  position: relative
  background: $white url('../assets/logos/tm-logo.svg') no-repeat 8px 12px
  background-size: 70px
  border-bottom: $border

landing-bar
  width: $fullwidth
  position: fixed
  z-index: 99

  nav
    @extends .display-flex
    flex(100%)
    flex-order(1)
    flex-direction(row)
    width: $fullwidth
    background-color: $white
    height: 3em

    .links
      flex-order(2)
      flex(75%)
      width: 75%
      text-align: right
      left: 30%
      padding: 0.5em 0
      font-size: 0.75em
      text-transform: uppercase
      border-bottom: $border

      ul
        height: 100%
        padding: 0.5em 0
        li
          padding: 0 0.25em
          a
            color: $brandcolor
            &:hover
              color: $brandaccent

.search
  @extends .display-flex
  flex(100%)
  flex-order(1)
  width: $fullwidth
  position:fixed
  top: 0
  background-color: $white
  z-index: 99
  border-bottom: $border

  &.customer
    .logo
      background-size: 80%
      background-position: 0.5em 1em

  form
    width: $fullwidth
    height: $fullheight
    flex-wrap(nowrap)
    margin: 0
    padding: 0

    ul
      display: none

      &.technology
        position: fixed
        top: 3.7em
        background-color: $white
        left: 0.5em
        width: auto
        border: $border
        border-radius: 3px

        li
          padding: 0.5em
          border-bottom: $border

          &:last-child
            border: 0

    div
      width: $fullwidth
      @extends .display-flex

      input
        flex(3)
        padding: 0 0.5em
        height: 2.5em
        margin: 0.5em 0
        border-radius: 0 !important
        -webkit-appearance: none

        &:focus
          border-bottom: 1px solid $brandcolor

        &::-webkit-input-placeholder
          font-size: 0.75em

        &:-moz-placeholder
          font-size: 0.75em

        &::-moz-placeholder
          font-size: 0.75em

        &:-ms-input-placeholder
          font-size: 0.75em

      select
        display:none

      button
        height: 2.5em

        &:first-child
          margin: 0.5em 0 0.5em 0.5em
          border-top-left-radius: 3px
          border-bottom-left-radius: 3px

        &:last-child
          margin: 0.5em 0.5em 0.5em 0
          border-top-right-radius: 3px
          border-bottom-right-radius: 3px

ul
  &#recommendations
    position: fixed
    z-index: 100
    top: 3.45em
    left: 4.15em
    right: 4.15em
    min-width: 71%
    width: inherit
    background-color: $white
    border: $border
    color: $textcolor
    max-height: 50%
    overflow: scroll

    li
      width: $fullwidth
      padding: 0.35em 0.75em
      border-bottom: $border

      &:last-child
        border: 0

      &:hover
        background-color: $bodycolor
        color: $brandcolor
        cursor: pointer

// Second Level Navigation

dl
  background-color: $white
  border-bottom: 0
  margin: 0.5em

  dt
    @extends .display-flex
    flex-justify-content(space-between)
    padding: 0.35em 0.5em
    background-color: $bordercolor
    font-size: 0.95em

    p
      padding: 0.45em 0.10em

    .label
      padding: 1em 0
      color: $textcolor

    span.sub-nav__icon
      padding: 0.5em 0.5em 0 0

    &.editor
      padding: 0
      background-color: $brandaccent

      form
        width: $fullwidth
        padding: 0

        div
          width: 25%
          display: inline-block
          padding: 1em
          border-right: 1px solid $basecolor

          &:last-child
            border-right: 0

          label
            margin: 0
            color: $textcolor

          input[type=radio]
            display: none

            &:checked
              + label
                color: $white

  &.scroll, .scroll
    max-height: 200px
    overflow(auto)

  dd
    @extends .display-flex
    flex-justify-content(space-between)
    padding: 0.5em 1em
    margin: 0
    border-bottom: $border
    font-size: 0.65em

    a
      text-decoration: none !important

    span.text
      padding: 0.35em 0 0 0

    form
      padding: 0

      input
        margin: 0 !important

    .help
      dd
        flex-direction(column)

  &.breadcrumbs
    @extends .display-flex
    margin: 0.5em
    border-bottom: $border
    flex-align-items(flex-start)
    flex-wrap(wrap)
    text-transform: uppercase
    letter-spacing: 1px

    dd
      flex(0 0 auto)
      border: 0
      display: inline-block
      height: $fullheight
      background-color: $bodycolor
      font-size: 0.75em

      &::after
        content: " / "
        padding: 0 0.5em 0 2em
        color: $basecolor

      &:last-child
        &::after
          content: ''
          padding: 0

      &.active
        background-color: $white

// Pagination

.pagination
  @extends .display-flex
  padding: 4em 0.5em 0
  width: 40%

  .previous, .next
    flex(0 0 auto)
    height: $fullheight
    text-align: center
    padding: 0.5em 0

    span
      background-color: $bordercolor
      padding: 0.5em
      margin: 0.5em 0
      border-radius: 50%

      &.text
        width: $fullwidth
        display: block
        font-size: 0.65em
        background-color: $transparent

  .number
    flex(0 0 auto)
    padding: 0 0.5em

    select
      background-color: $white
      height: 3.2em
      width: $fullwidth
      -webkit-appearance: menulist-button
      border:0

// Results per page

.number-of-results
  padding: 4em 0.5em 0
  width: 40%

  form
    float:right
    padding: 0
    height: 2em

    label
      min-width:30px
      background-color: $bordercolor
      border: $border
      padding: 0.5em
      text-align: center
      font-size: 0.85em
      color: $textcolor
      transitions(0.3s)

    input[type='radio']
      display: none

      &:checked
        + label
          background-color: $white
          transitions(0.3s)

  span.text
    font-size: 0.75em
    padding: 0.65em 0 0 0
    display: block
    width: $fullwidth
    text-align: right
    float: right

// Back to top

.back-to-top
  width: 20%
  text-align: center
  padding: 1em 0 0

  span
    background-color: $bordercolor
    padding: 0.5em
    margin: 0.5em 0
    border-radius: 50%

    &.text
      display: block
      font-size: 0.65em
      width: $fullwidth
      background-color: $transparent