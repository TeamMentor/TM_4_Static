.col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12
  flex(100%)
  width: $fullwidth
  display:block

@media $small
  .col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12
    display: inline-block

  .col-1
    flex(8.333%)
    width: 8.333%

  .col-2
    flex-basis(16.667%)
    width: 16.667%

  .col-3
    flex-basis(25%)
    width: 25%

  .col-4
    flex-basis(33.33%)
    width: 33.333%

  .col-5
    flex-basis(41.667%)
    width: 41.667%

  .col-6
    flex-basis(50%)
    width: 50%;

  .col-7
    flex-basis(58.333%)
    width: 58.333%

  .col-8
    flex-basis(66.667%)
    width: 66.667%

  .col-9
    flex-basis(75%)
    width: 75%

  .col-10
    flex-basis(83.333%)
    width: 83.333%

  .col-11
    flex-basis(91.667%)
    width: 91.667%

  .col-12
    flex-basis(100%)
    width: 100%