@media $micro
  // Footer
  .si-logo
    margin: 15px 10px 0

  .icons
    flex(1)

  // Landing Page

  .about, .call-to-action, .usp
    background: $textcolor url(../assets/stock-img/bg-img-medium.jpg) no-repeat
    padding: 2em
    min-height: 200px
    text-align: center

    h2, h3
      font-size: 1.75em

  .about
    background-position: 0px -820px

  .call-to-action
    background-position: 0px -500px

  .reasons, .about-us, .features
    padding: 2em 10%

    h2, h3
      text-align: center

  .clients
    padding: 0 10% 2em

@media $small
  // Structure
  .scrolling-results
    height: 80%
    overflow: auto

  .application-scroll
    height: $fullheight
    overflow-y: hidden

    &:hover
      overflow: auto

  .middle-col
    flex-order(2)
    height: $fullheight
    overflow: hidden

  .right-col
    flex-order(3)

  // Navigation

  landing-bar
    nav
      height: 4em

      .logo
        background-color: transparent;
        background-size: 35%;
        flex(50%)
        width: 50%
        height: 4em

      .links
        flex(50%)
        width: 50%
        font-size: 0.85em

        ul
          li
            padding: 0.75em 1em
            vertical-align: middle

            &:last-child
              display: inline-block

  .search
    flex-order(3)
    flex(74.5%)
    width: 74.5%
    position: fixed
    top: 0
    left: 0
    overflow(hidden)
    background-color: white
    display: inline-block
    height: 4em

    form
      width: $fullwidth
      padding: 0 0.5em 0 0
      border-right: $border

      ul
        display: inline-block
        width: 53%
        background-color: $white
        border-right: $border

        li
          div
            &.logo
              background-size: 60%
              width: $fullwidth
              height: 4em
              background-position: 0.75em 0.5em

      button
        flex(10%)
        flex-order(3)
        width: 10%
        text-align: center
        height: 2.5em
        margin: 0.75em 0.25em 0 0

      input
        background-color: $transparent
        flex-order(2)
        flex(70%)
        width: 70%
        height: 2.5em
        margin: 0.75em 0
        padding: 0 0 0 0.5em
        border: $border
        border-radius: 3px

        &:focus
          transition(0.3s)
          border: 1px solid $brandaccent
          border-radius: 3px

      select
        flex(20%)
        width: 20%
        flex-order(1)
        margin: 0.75em 0 0.75em 0.75em
        height: 2.5em

  // Application

  .application
    flex-order(2)
    height: 92%
    flex-wrap(nowrap)

  .main
    @extends .display-flex
    flex-order(2)
    flex($fullwidth)
    width: $fullwidth
    top: 4em
    left: 0
    padding: 0
    height: 92%

  .container
    .main
      position: relative
      top: 0
      left: 0
      width: 100%

  // Left Navigation

  .navigation
    top: 0
    left: 74.5%
    width: 25.5%
    flex(25.5%)
    display: block
    text-align: center
    height: 4em
    padding: 0
    border-top: 0
    border-bottom: $border

    aside
      ul
        text-align: right

        li
          width:20%
          border-right:0
          border-left: $border
          text-align: center
          height: 4em

          &:first-child
            display: none

          &:nth-child(2)
            border-left: 0

  // Filter

  .filters
    height: $fullheight
    padding: 0

  // Sections

  .section
    &.row__landing-page
      top: 4em

    &.row__label
      flex-direction(row)
      flex($fullwidth)
      width: $fullwidth

    &.tm-summary
      display: inline-block
      padding: 0 3em

      table
        tr
          td
            &:last-child
              width: 80%

    &.article-info
      position: fixed
      right: 0.5em
      top: 4em
      height: 93%
      width: 25%

      section.row__label
        padding: 3em 0 0 0

  // Buttons

  .btn-search
    padding: 5px 0 0 10px
    font-size: 1.25em

  // Footer

  .footer
    ul
      text-align: right

    .icons
      flex(2)

  // Article

  .article
    padding: 1em 6em

    h1.article-title
      line-height: 2em
      padding: 0 0 1em 0
      border-bottom: $border
      font-size: 2.25em
      margin: 0

    .article-content
      h1
        font-size: 2em

      h2
        font-size: 1.75em

      h3
        font-size: 1.5em

      h4
        font-size: 1.25em

      h5
        font-size: 1em

      p, ul
        font-size: 1em
        line-height: 1.75em

  .result
    display: inline-block

  // Typography
  h1
    font-size: 2.25em

  h2
    font-size: 2em

  h3
    font-size: 1.75em

  h4
    font-size: 1.5em

  h5
    font-size: 1.25em

  p, ul
    font-size: 1em
    line-height: 1.75em

  // Forms

  form
    .input-field, .button-field, .conditions
      flex(1 1 50%)
      width: 50%
      padding: 0.5em

    .conditions
      margin: 1em 0

    .button-field
      ul
        li
          display: inline-block

  // Landing Page

  .about, .call-to-action, .usp
    background: $textcolor url(../assets/stock-img/bg-img-large.jpg) no-repeat
    padding: 5em 15em
    min-height: 300px

  .about
    background-position: 0px -1400px

  .call-to-action
    background-position: 0px -800px

  .reasons, .about-us, .features
    padding: 3em 10%

  .clients
    padding: 0 10% 3em

  .features
    p
      position: relative

  // Sprites

  .fix-vulnerabilities, .reduce-vulnerabilities, .improve-process, .delivers-compliance, .integrates, .cross-references, .provides-guidance
    padding: 0

  // Sub Navigation

  dl

    .scroll, &.scroll
      max-height: $fullheight

    dt
      font-size: 1.08em

    dd
      font-size: 0.85em

  .number-of-results
    span
      &.text
        font-size: 0.65em

@media $large

  // Landing Page
  landing-bar
    padding: 0 5%

  .section
    &.row__landing-page
      padding: 0 4.5% 0 5%

  .reasons, .about-us, .features
    padding: 3em 20%

  .clients
    padding: 0em 20% 3em

  // Container
  .section
    &.row__landing-page
      .main
        padding: 0 5%