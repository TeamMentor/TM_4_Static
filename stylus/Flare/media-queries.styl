@media $micro
  // Footer
  .si-logo
    margin: 15px 10px 0

  .icons
    flex(1)

  // Landing Page

  .about, .call-to-action, .usp
    background: $textcolor url(../assets/stock-img/bg-img-medium.jpg) no-repeat
    padding: 2em
    min-height: 200px
    text-align: center

    h2, h3
      font-size: 1.75em

  .about
    background-position: 0px -820px

  .call-to-action
    background-position: 0px -500px

  .reasons, .about-us, .features
    padding: 2em 10%

    h2, h3
      text-align: center

  .clients
    padding: 0 10% 2em

@media $small

  // Navigation

  landing-bar
    nav
      height: 4em

  .logo
    background-color: transparent;
    background-size: 35%;
    flex(50%)
    width: 50%
    height: 4em

  .application-logo
    background: $white url(../assets/logos/tm-icon.svg) no-repeat
    background-size: 30px
    background-position: 10px 12px

  .links
    flex(50%)
    width: 50%
    font-size: 0.85em

    ul
      li
        padding: 0.75em 1em
        vertical-align: middle

        &:last-child
          display: inline-block

  .search
    flex-order(3)
    flex(95%)
    width: 95%
    position: fixed
    top: 0
    left: 5%
    overflow(hidden)
    background-color: white
    display: inline-block
    height: 4em

    form
      width: $fullwidth

      button
        flex(5%)
        flex-order(3)
        width: 5%
        text-align: center

      input
        background-color: $transparent
        flex-order(2)
        flex(85%)
        width: 85%

        &:focus
          transition(0.3s)

      select
        flex(15%)
        width: 15%
        flex-order(1)
        margin: 0.25em 0

  // Application

  .application
    flex-order(2)
    height: 92%
    flex-wrap(nowrap)

  main
    @extends .display-flex
    flex-order(2)
    flex(95%)
    width: 95%
    overflow(scroll)
    top: 4em
    left: 5%
    padding: 0
    height: 92%

  .container
    main
      position: relative
      top: 0
      left: 0
      width: 100%

  // Left Navigation

  left-navigation
    top: 0
    width:5%
    flex(5%)
    display: block
    text-align: center
    height: $fullheight
    padding: 0

    aside
      ul
        li
          display: block
          width: $fullwidth
          border: 0
          border-bottom: $border

          &:first-child
            height: 4em
            float: none

  // Filter

  filters
    height: $fullheight
    padding: 0

  // Sections

  section
    .row_landing-page
      top: 4em

    &.row__label
      flex-direction(row)
      flex($fullwidth)
      width: $fullwidth

      .label
        flex(3)
        width: $fullwidth
        padding: 0.5em 0 1em

      ul
        flex(1)
        width: $fullwidth
        text-align: right

    &.tm-summary
      display: inline-block

      table
        tr
          td
            &:last-child
              width: 80%
              margin: 0
              padding: 0 0 0 1em

    &.article-info
      section.row__label
        padding: 3em 0 0 0

  // Buttons

  .btn-search
    padding: 5px 0 0 10px
    font-size: 1.25em

  // Footer

  footer
    ul
      text-align: right

    .icons
      flex(2)

  // Article

  article
    padding: 1em 2em

    &.result
      display: inline-block

  // Typography

  h1
    font-size: 2.25em

  h2
    font-size: 2em

  h3
    font-size: 1.75em

  h4
    font-size: 1.5em

  h5
    font-size: 1.25em

  p, ul
    font-size: 1em
    line-height: 1.75em

  // Forms

  form
    .input-field, .button-field, .conditions
      flex(1 1 50%)
      width: 50%
      padding: 0.5em

    .conditions
      margin: 1em 0

    .button-field
      ul
        li
          display: inline-block

  // Landing Page

  .about, .call-to-action, .usp
    background: $textcolor url(../assets/stock-img/bg-img-large.jpg) no-repeat
    padding: 5em 15em
    min-height: 300px

  .about
    background-position: 0px -1400px

  .call-to-action
    background-position: 0px -800px

  .reasons, .about-us, .features
    padding: 3em 10%

  .clients
    padding: 0 10% 3em

  .features
    p
      position: relative

  // Sprites

  .fix-vulnerabilities, .reduce-vulnerabilities, .improve-process, .delivers-compliance, .integrates, .cross-references, .provides-guidance
    padding: 0

  // Sub Navigation

  .pagination
    width: 50%
    margin: 0 auto

  dl
    margin: 0

    .scroll
      max-height: $fullheight

    dt
      font-size: 1.08em

    dd
      font-size: 0.85em

@media $medium
  .container
    width: 1285px
    margin: 0 auto

  .reasons, .about-us, .features
    padding: 3em 20%

  .clients
    padding: 0em 20% 3em