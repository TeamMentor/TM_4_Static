.application
  @extends .display-flex
  flex-order(2)
  flex($fullwidth)
  flex-direction(column)
  width: $fullwidth
  height: 94%
  position: fixed
  top: 3.5em
  left: 0
  display: block
  overflow(auto)

// Sections

section
  width: $fullwidth
  display: block
  overflow(auto)

  &.row, &.row__article, &.row__label, &.row__landing-page
    @extends .display-flex
    flex-wrap(wrap)
    flex-justify-content(flex-start)
    flex-align-items(flex-start)
    flex-align-content(flex-start)
    flex($fullwidth)
    width: $fullwidth
    background-color: $transparent

  &.row__article
    padding: 0 1em
    display: inline-block

  &.article-info
    flex-align-self(stretch)
    height: $fullheight
    background: $infocolor
    padding: 1em
    overflow(hidden)

    .label, ul, a
      color: $white

    ul
      width: 100%
      padding: 0.5em 0

    span.text
      padding: 0 0 0 1em

    a
      &:hover
        color: $brandaccent

  &.article-body
    flex-align-self(stretch)
    height: $fullheight
    padding: 1em

    a
      text-decoration: underline;

  &.row__label
    padding: 0 0.5em

  &.row__landing-page
    flex-order(2)
    overflow(auto)
    background-color: $white
    height: 92%

  &.tm-summary
    display: none

    table
      border: 0
      margin: 0.5em 0

      tr
        td
          &:first-child
            width: 30%
            margin: 0


// Asides

left-navigation
  @extends .display-flex
  flex($fullwidth)
  width: $fullwidth
  flex-order(99)
  background-color: $white
  flex-order(2)
  position: fixed
  left: 0
  bottom: 0
  border-top: $border

  ul
    width: $fullwidth
    text-align: center
    height: 4em

    li
      padding: 1em
      display: inline-block
      border-right: $border
      width: 20%

      &:first-child
        padding: 0
        float: left

aside
  @extends .display-flex
  flex($fullwidth)
  width: $fullwidth
  flex-order(99)
  background-color: $white

  ul
    width: $fullwidth
    text-align: center

  &#left-nav
    border-bottom: $border
    flex-order(2)

    ul
      height: 4em

      li
        padding: 1em
        display: inline-block
        border-right: $border
        width: 20%

        &:first-child
          padding: 0
          float: left

  &#right-nav
    display: none
    right: 0
    top: 4em
    text-align: left
    padding: 0 1em
    overflow(auto)

    &:target
      flex($fullwidth)
      flex-order(3)
      width($fullwidth)
      height: auto
      border-top: 0
      display: block
      padding: 1em

      ~ main
        height: 0

// Main container

main
  @extends .display-flex
  flex-order(1)
  flex($fullwidth)
  flex-align-items(flex-start)
  flex-align-content(flex-start)
  flex-wrap(wrap)
  width: $fullwidth
  overflow(auto)
  height: 92%

// Articles

article
  .result, .search-term
    flex(1)
    width: $fullwidth
    display: inline-block

  &.search-term
    flex(1 0 auto)
    width: auto
    border-radius: 30px
    padding: 1em
    margin: 0.5em
    word-wrap: normal
    background-color: $white
    color: $textcolor
    border: $border

    [class^="icon-"], [class*=" icon-"]
      padding: 0 10px 0 0
      font-size: 0.85em

    a
      text-decoration: none

  &.result
    flex(1 1 400px)
    margin: 0.5em
    min-height: 350px
    padding: 0
    text-align: center
    border: $border
    background-color: $white

    h3
      color: $infocolor
      margin: 0 0 1em 0
      padding: 0 0 0.5em 0
      border-bottom: $border
      line-height: 1.5em
      transitions(0.3s)

    a
      text-decoration: none

      &:hover h3
        color: $brandcolor
        transitions(0.3s)

    .metadata
      background-color: $infocolor
      border-bottom: $border

      .label
        padding: 0

      ul
        flex(1)
        list-style-type: none
        padding: 0
        margin: 0
        text-align: right

        li
          display: inline-block
          text-align: center
          width: auto
          padding: 0.5em 0
          margin: 0 0.5em

    .summary
      padding: 1.5em 1em 0.5em;
      width: $fullwidth

// Filters

#filters
  input[type="checkbox"]
    display: none

    &:checked + label
      background-color: $bodycolor

  label
    @extends .display-flex
    flex-justify-content(space-between)
    flex(0 0 30%)
    width: $fullwidth
    margin: 0.5em 0.25em
    padding: 0.5em 0.75em 0.25em
    border: $border
    border-radius: 2em
    letter-spacing: 0

  #filter-icon
    font-size: 2.5em

  .badge
    max-height: 25px
    padding: 0.65em 0.5em 0.5em
    margin: 0.35em 0 0