h1, h2, h3, h4, h5, h6
  font-family: Helvetica, Arial, sans-serif
  font-weight: normal

h1, h2, h3
  color: $headingcolor

h4, h5, h6, hr
  color: $infocolor

h1
  font-size: 2em
  line-height: 1.25em

h2
  font-size: 1.75em
  line-height: 1.153em

h3
  font-size: 1.5em
  line-height: 1.136em

h4
  font-size: 1.25em
  line-height: 1.3em

h5
  font-size: 1em
  line-height: 1.11em

h6
  font-size: 0.95em
  line-height: 1.11em

p
  font-size: 0.85em
  line-height: 1.5em

p, a, ul, ol
  color: $textcolor

ul, ol
  margin: 0
  padding: 0
  list-style-type: none

  li
    line-height: 1.5em

code, pre
  display: block
  padding: 20px
  line-height: 1.5
  white-space: pre-wrap
  white-space: -moz-pre-wrap !important
  white-space: -pre-wrap
  white-space: -o-pre-wrap
  word-wrap: break-word
  background-color: $bodycolor
  border: 1px solid #aaaaaa
  border-radius: 3px
  margin: 30px 0
  overflow(auto)

hr
  background-color: $infocolor
  height: 1px
  margin: 40px 0
  border: 0

a
  text-decoration: none
  outline: none

  &:hover, &:active, &:focus
    color: $brandaccent
    outline: none

  .minor
    color: #7b7b7b
    text-decoration: none !important
    font-size: 0.85em
    line-height: 4.5em
    display: block

    &:hover
      color: $infocolor

.text-right
  text-align: right !important